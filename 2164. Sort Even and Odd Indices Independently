class Solution {
public:
    vector<int> sortEvenOdd(vector<int>& nums) {
        int size=nums.size();
        if(size==2){
            return nums;
        }
        for(int i=0;i<size;i++){
            for(int j=i+1;j<size;j++){
                if(i%2==0 && j%2==0){
                    if(nums[i]>nums[j]){
                        int temp=nums[i];
                        nums[i]=nums[j];
                        nums[j]=temp;
                    }
                }
                if(i%2!=0 && j%2!=0){
                    if(nums[i]<nums[j]){
                        int temp=nums[i];
                        nums[i]=nums[j];
                        nums[j]=temp;
                    }
                }
            }
        }
        
        return nums;
    }
};
