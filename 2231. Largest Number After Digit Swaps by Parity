class Solution {
public:
    int largestInteger(int num) {
        string s = to_string(num); // convert integer to string
        int n = s.size();
        for (int i = 0; i < n - 1; i++) {
            for (int j = i + 1; j < n; j++) {
                if ((s[i] % 2 == 0 && s[j] % 2 == 0 && s[i] < s[j]) ||
                    (s[i] % 2 != 0 && s[j] % 2 != 0 && s[i] < s[j])) {
                    swap(s[i], s[j]);
                }
            }
        }
        return stoi(s); // convert string back to integer and return
    }
};

